<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Repositório</title>
   
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="~/Content/chips-material.css" />
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/0.8.3/angular-material.min.css">
    <link rel="stylesheet" href="~/Content/search.css" />
    <link type="text/css" rel="stylesheet" href="Content/materialize.css" media="screen,projection" />
    
 
</head>
    <body>
        <div ng-controller="appCtrl" class="menuBar" layout="column" style="height:95%; width: 100%" ng-app="app">
            <!-- Toolbar -->
            <md-content ng-controller="searchCtrl">
                <md-toolbar>
                    <div id="menuToolBar">
                        <div class="md-toolbar-tools">
                            <md-button class="md-icon-button" aria-label="Settings" ng-click="toggleLeft()">
                                <md-icon md-svg-icon="img/menu.svg" style="color: #FF0000"></md-icon>
                            </md-button>
                            <md-button class="md-icon-button" aria-label="Snippets" ui-sref="home">
                                <span>Home</span>
                            </md-button>
                            <span flex=""></span>
                            <md-button class="md-icon-button" aria-label="Login" ng-click="openSearch()">
                                <md-icon md-svg-src="img/magnify.svg" style="color: white;"></md-icon>
                            </md-button>
                            <md-button class="md-icon-button" aria-label="Login">
                                <span>Login</span>
                            </md-button>
                        </div>
                    </div>
                    <div id="searchToolBar" class="hidden">
                        <!-- Top Search Content -->
                        <div id="top-search-wrap">
                            <md-icon md-svg-src="img/magnify.svg" style="color: white;"></md-icon>
                            <input type="text">
                            <md-button class="md-icon-button" ng-click="closeSearch()">
                                <i id="top-search-close">&times;</i>
                            </md-button>

                        </div>
                    </div>
                </md-toolbar>
            </md-content>
           
             <!-- COLOCAR NA PÁGINA DE BUSCA -->
            @*<md-sidenav class="md-sidenav-right md-whiteframe-z2" md-component-id="right">
                <div ng-controller="rightCtrl" layout-padding="">
                    <md-toolbar class="md-theme-light" ng-click="close()">
                        <h1 class="md-toolbar-tools">Projetos</h1>
                    </md-toolbar>
                    <md-content>
                        <md-list ng-controller="ListCtrl" class="listdemoListControls" ng-app="MyApp">
                            <md-list-item ng-repeat="proj in project">
                                <p>{{ proj.name }}</p>
                                <md-checkbox class="md-secondary" ng-model="proj.wanted"></md-checkbox>
                            </md-list-item>
                    </md-content>
                </div>
            </md-sidenav>*@

            @*<div class="container body-content"></div>*@

            @RenderBody()
            <md-toolbar class="navbar-fixed-bottom">
                <div layout="row" layout-align="center center" flex>
                    <p><span>&copy;</span> @DateTime.Now.Year - Repositório</p>
                </div>
            </md-toolbar>
            
           
            <!-- Sidenav -->
            <md-content flex="" layout-padding="">
                <md-sidenav class="md-sidenav-left md-whiteframe-z2" md-component-id="left">
                    <div ng-controller="leftCtrl" layout-padding="">
                        <md-toolbar class="md-theme-light" ng-click="close()">
                            <h1 class="md-toolbar-tools">Repositório</h1>
                        </md-toolbar>
                        <md-content>
                            <!-- Lista do sidebar -->
                            <md-list>
                                <md-list-item class="md-3-line">
                                    <div class="md-list-item">
                                        <h3>Snippets</h3>
                                        <div class="md-list-item">
                                            <md-button class="md-icon-button" aria-label="Snippets" ui-sref="snippets">
                                                <md-icon>Buscar</md-icon>
                                                <span>Buscar</span>
                                            </md-button>
                                            </br>
                                            <md-button class="md-icon-button" aria-label="Snippets" ui-sref="adicionarSnippets">
                                                <md-icon>Adicionar</md-icon>
                                                <span>Adicionar</span>
                                            </md-button>

                                        </div>
                                    </div>
                                    <div class="md-list-item-text">
                                        <h3>Projetos</h3>
                                        <div class="md-list-item">
                                            <md-button class="md-icon-button" aria-label="Snippets" ui-sref="projetos">
                                                <md-icon>Buscar</md-icon>
                                                <span>Buscar</span>
                                            </md-button>
                                            </br>
                                            <md-button class="md-icon-button" aria-label="Snippets" ui-sref="adicionarProjetos">
                                                <md-icon>Buscar</md-icon>
                                                <span>Adicionar</span>
                                            </md-button>
                                        </div>
                                    </div>
                                </md-list-item>
                            </md-list>
                        </md-content>
                    </div>
                </md-sidenav>

                <div layout="column" layout-fill="" layout-align="top center">
                    <!-- VIEW - UI-ROUTER -->
                    <div ui-view></div>
                </div>
            </md-content>
            
        </div>

        <!-- Angular Material Dependencies -->
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-animate.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-aria.min.js"></script>

        <!-- Import de js -->
        @*<script type="text/javascript" src="~/Scripts/materialize/materialize.js"></script>*@

        <!-- Plugins Angular -->
        <script src="~/Scripts/angular/angular-ui-router.min.js"></script>

        <!-- Angular Material Javascript now available via Google CDN; version 0.8 used here -->
        <script src="https://ajax.googleapis.com/ajax/libs/angular_material/0.8.3/angular-material.min.js"></script>

        <!-- Ace Editor-->
        @*<script src="../Scripts/ace/src-noconflict/ace.js" type="text/javascript" charset="utf-8"></script>
        <script src="../Scripts/ace/ui-ace.js" type="text/javascript" charset="utf-8"></script>*@

        <script src="~/Scripts/module/app.js" type="text/javascript"></script>
        <script src="~/Scripts/controller/listaMenu-controller.js" type="text/javascript"></script>
        <script src="~/Scripts/controller/search-controller.js" type="text/javascript"></script>
        <script src="~/Scripts/controller/sideBar-controller.js" type="text/javascript"></script>
        <script src="~/Scripts/controller/adicionar-snippet.js" type="text/javascript"></script>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
